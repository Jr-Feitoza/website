<div class="row">
  <div class="col-lg-5 m-x-auto pull-xs-none vamiddle">
    <div class="card">
      <div class="card-block p-a-2">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <h1>Ativar conta</h1>
          <p class="text-muted">Informe seu email para receber as instruções de ativação</p>

          <% if (msg = devise_error_messages!).present? %>
            <div class="alert alert-danger" role="alert"><%= msg %></div>
          <% end %>

          <div class="input-group m-b-1">
            <span class="input-group-addon">@</span>
            <%= f.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
          </div>
          <button type="submit" class="btn btn-block btn-success">Receber instruções de ativação por email</button>
        <% end %>
      </div> <!-- /.card-block -->
    </div> <!-- /.card -->
  </div> <!-- /.vamiddle -->
</div> <!-- /.row -->

<div class="row">
  <div class="col-lg-8 m-x-auto pull-xs-none">
    <div class="devise-other-options">
      <%= link_to 'Quer acessar a sua conta? Entre aqui', new_session_path(resource_name), class: 'btn btn-link' %>
    </div>
  </div>
</div>
